// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  fullName    String
  countryName String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  restaurants Restaurant[]

  @@index([email])
}

model EmailVerification {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email, code])
  @@index([expiresAt])
}

model Restaurant {
  id        String   @id @default(cuid())
  name      String
  location  String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories Category[]
  dishes     Dish[]

  @@index([userId])
}

model Category {
  id           String   @id @default(cuid())
  name         String
  restaurantId String
  parentId     String? // For category hierarchy (subcategories)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant Restaurant     @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  parent     Category?      @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children   Category[]     @relation("CategoryHierarchy")
  dishes     DishCategory[]

  @@index([restaurantId])
  @@index([parentId])
}

model Dish {
  id           String   @id @default(cuid())
  name         String
  image        String? // URL to image
  description  String?
  spiceLevel   Int? // 0-3, optional
  dietaryType  String   @default("vegetarian") // "vegetarian" or "non-vegetarian"
  price        Float? // Optional price in rupees
  restaurantId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant Restaurant     @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  categories DishCategory[]

  @@index([restaurantId])
}

model DishCategory {
  id         String   @id @default(cuid())
  dishId     String
  categoryId String
  createdAt  DateTime @default(now())

  dish     Dish     @relation(fields: [dishId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([dishId, categoryId])
  @@index([dishId])
  @@index([categoryId])
}
